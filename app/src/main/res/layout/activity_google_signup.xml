<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:orientation="vertical"
    android:background="#F1F1F1"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/app_logo"
            android:layout_centerHorizontal="true"
            android:transitionName="main_logo"/>
        <TextView
            android:id="@+id/welcome"
            android:layout_below="@id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/bungee"
            android:layout_centerHorizontal="true"
            android:text="Sparty"
            android:textColor="#C80C0C0C"
            android:textSize="35sp"
            android:transitionName="logo_name" />
        <TextView
            android:id="@+id/slogan"
            android:layout_below="@id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bungee"
            android:text="enter the details"
            android:textColor="#C8696A67"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:transitionName="slogan"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/gname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Fullname"
            android:theme="@style/MainTheme"
            app:hintTextColor="@color/background"
            android:textColorHint="@color/hintColour"
            app:boxStrokeColor="@color/background"
            app:endIconMode="clear_text"
            app:endIconTint="@color/hintColour"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            android:layout_marginBottom="15dp"
            android:transitionName="username_field">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#000000"
                android:drawableTint="@color/hintColour"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/logo_fullname">
            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/gphoneno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="PhoneNo"
            android:theme="@style/MainTheme"
            app:hintTextColor="@color/background"
            android:textColorHint="@color/hintColour"
            app:boxStrokeColor="@color/background"
            app:endIconMode="clear_text"
            app:endIconTint="@color/hintColour"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            android:layout_marginBottom="15dp"
            android:transitionName="username_field">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="#000000"
                android:drawableTint="@color/hintColour"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/logo_phone">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/signupGoogle"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/background"
            android:drawableLeft="@drawable/signup_logo"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:elevation="20dp"
            android:fontFamily="@font/bungee"
            android:onClick="signupgoogle"
            android:text="Sign-up"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:transitionName="sign">
        </Button>
    </LinearLayout>

</LinearLayout>