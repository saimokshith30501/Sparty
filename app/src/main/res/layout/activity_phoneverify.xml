<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phoneverify"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/verify_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP"
            android:textSize="45sp"
            android:fontFamily="@font/bungee"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">
        </TextView>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/phone_verificaction"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/phoneverification"></com.airbnb.lottie.LottieAnimationView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/phone_verified"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:padding="30dp"
            app:lottie_rawRes="@raw/phone_success"
            app:lottie_autoPlay="true"
            android:scaleType="fitCenter"
            app:lottie_loop="true">
        </com.airbnb.lottie.LottieAnimationView>
        <TextView
            android:id="@+id/verify_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERIFICATION"
            android:textSize="25sp"
            android:fontFamily="@font/bungee"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
        </TextView>
        <TextView
            android:id="@+id/verify_detect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detecting Automatically"
            android:textSize="15sp"
            android:fontFamily="@font/bungee"
            android:textColor="@color/black"
            android:layout_gravity="center">
        </TextView>
        <com.chaos.view.PinView
            android:id="@+id/pin_view"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="265dp"
            app:itemSpacing="5dp"
            android:layout_height="wrap_content"
            app:itemCount="6"
            app:itemWidth="40dp"
            app:itemHeight="40dp"
            app:itemRadius="5dp"
            app:lineColor="@color/black"
            android:itemBackground="#F6ECEC"
            android:textColor="@color/black"
            android:inputType="number"
            style="@style/PinWidget.PinView"
            android:cursorVisible="true"
            app:cursorColor="@color/black">
        </com.chaos.view.PinView>
        <Button
            android:id="@+id/verifyOtpButton"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="VERIFY CODE"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:fontFamily="@font/bungee"
            android:background="@drawable/button_border"
            app:backgroundTint="@color/background">
        </Button>
    </LinearLayout>

</ScrollView>