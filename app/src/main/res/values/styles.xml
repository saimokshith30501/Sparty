<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <!-- Action Bar Styles -->
    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/background</item>
    </style>

    <style name="mytext" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
        <item name="colorAccent">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorHint">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="android:colorPrimary">@color/background</item>
        <item name="android:colorSecondary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/background</item>
        <item name="colorButtonNormal">@color/background</item>
        <item name="android:colorAccent">@color/background</item>
        <item name="android:color">@color/background</item>
        <item name="colorControlNormal">@color/background</item>
        <item name="colorControlActivated">@color/background</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
